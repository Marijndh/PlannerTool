<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PlannerTool.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PlannerTool.Controls.ProjectTab"
             x:DataType="vm:ProjectViewModel">
    <Design.DataContext>
        <vm:ProjectViewModel/>
    </Design.DataContext>
    
    <Button HorizontalAlignment="Stretch" Command="{Binding OpenProject}">
        <StackPanel Orientation="Horizontal">
            <Label Classes="icon" FontFamily="{DynamicResource IconsBold}" Content="&#xeb9a;"></Label>
            <Label Content="{Binding Title}"/>
        </StackPanel>
    </Button>
</UserControl>
