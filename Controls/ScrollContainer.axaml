<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PlannerTool.Controls.ScrollContainer">
            <Grid ColumnDefinitions="*, *" RowDefinitions="*,*" ColumnSpacing="10">
            <Label Grid.ColumnSpan="2" Grid.Row="0" Classes="title">Projects</Label>
            <StackPanel Grid.Column="0" Grid.Row="1" Spacing="5">
                <Button HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" FontFamily="{DynamicResource IconsBold}" Content="&#xeb9a;"></Label>
                        <Label Content="Test"></Label>
                    </StackPanel>
                </Button>
                <Button Content="Back" HorizontalAlignment="Stretch"></Button>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="1" Spacing="5">
                <Button HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" FontFamily="{DynamicResource IconsBold}" Content="&#xeb9a;"></Label>
                        <Label Content="Test2"></Label>
                    </StackPanel>
                </Button>
                <Button Content="Back" HorizontalAlignment="Stretch"></Button>
            </StackPanel>
    </Grid>
</UserControl>
